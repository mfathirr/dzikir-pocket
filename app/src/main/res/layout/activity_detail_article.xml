<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailArticleActivity">

    <ImageView
        android:id="@+id/img_detail_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/txt_desc_image_detail_article_from_dataset"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:text="adsadj"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/img_detail_article" />

    <TextView
        android:id="@+id/tv_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="sfdjnsjnfsjdfnsjdnsjdnfjsnfsjfnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/tv_title_article"/>


</androidx.constraintlayout.widget.ConstraintLayout>